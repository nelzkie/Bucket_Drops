<resources>

	<style name="AppTheme.Base" parent="Theme.AppCompat.NoActionBar">

	</style>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppTheme.Base">
        <!-- Customize your theme here. -->
		<item name="android:fontFamily">@string/sans_serif_thin</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
	<style name="DiaglogTheme" parent="Theme.AppCompat.Dialog">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">match_parent</item>
		<item name="windowNoTitle">true</item>
		<item name="android:windowIsFloating">false</item>
		<item name="android:windowBackground">@android:color/transparent</item>
	</style>
	<style name="ToolBarTheme" parent="Theme.AppCompat.Light">
		<item name="android:colorBackground">@color/cyan</item>
		<item name="android:textColor">@color/dark_purple</item>

	</style>
	<style name="DatePickerItemStyle">
		<item name="android:layout_width">@dimen/layer_list_drawable_width</item>
		<item name="android:layout_height">match_parent</item>
		<item name="android:gravity">center</item>
		<item name="android:textColor">@color/light_purple</item>
		<item name="android:textSize">24sp</item>
		<item name="android:background">@drawable/bg_picker_item_background</item>
		<item name="android:maxLines">1</item>
		<item name="android:drawablePadding">10dp</item>
		<item name="android:drawableTop">@drawable/up_normal</item>
		<item name="android:drawableBottom">@drawable/bottom_normal</item>

	</style>

</resources>
